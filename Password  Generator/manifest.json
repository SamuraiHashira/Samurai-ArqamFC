{
    "manifest_version": 3,
    "name": "Samurai ArqamFC",
    "version": "1.0",
    "description": "Your Samurai is ready for duty",
    "permissions": [
        "activeTab",
        "storage",
        "https://github.com/SamuraiHashira/Samurai-ArqamFC"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "host_permissions": [
        "https://github.com/SamuraiHashira/Samurai-ArqamFC/"
    ]
}
